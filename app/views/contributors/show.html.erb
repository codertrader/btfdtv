<%- model_class = Contributor -%>
<div class="page-header">
  <h2><%=t '.title', :default => @contributor.name %>&nbsp;<small><%= @contributor.title || Contributor %></small></h2>
</div>

<div class="container-fluid">
 <div class="row-fluid">
  <div class="span3">
    <%= image_tag(avatar_url(@contributor,200), :width=>200, :height=>200, :alt=>'Gravatar') %>
  </div>
  <div class="span9">
    <table id="contributor-data" class="table table-striped" style="width:100%;">
      <tbody> 
        <tr class="table-row"><td class="span2"><strong>Name</strong></td><td class=""><%= @contributor.name %>&nbsp;</td></tr>
        <tr class="table-row"><td class="span2"><strong>Twitter</strong></td><td class=""><%= @contributor.twitter%>&nbsp;</td></tr>
        <tr class="table-row"><td class="span2"><strong>Facebook</strong></td><td class=""><%= @contributor.facebook%>&nbsp;</td></tr>
        <tr class="table-row"><td class="span2"><strong>Site</strong></td><td class=""><%= link_to('Site',@contributor.site,:target=>'blank') %></td></tr>
      </tbody> 
     </table>
  </div> 
 </div>
 <div class="row-fluid">
   <div class="span12">
     <dt><strong>Biography</strong></dt><br/>
     <dd><%= simple_format @contributor.full_bio %></dd><br/>
   </div> 
 </div>
</div>
<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              contributors_path, :class => 'btn'  %>
<% if current_user_is_admin %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_contributor_path(@contributor), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              contributor_path(@contributor),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
<% end %>
</div>


