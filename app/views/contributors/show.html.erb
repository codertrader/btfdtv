<%- model_class = Contributor -%>
<div class="page-header">
  <h2><%=t '.title', :default => model_class.model_name.human.titleize %>&nbsp;<small>One of Our Greatest Assets</small></h2>
</div>

<div class="span12">

<%= image_tag(avatar_url(@contributor,200)) %>

<dl class="dl-horizontal pull-left">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @contributor.name %></dd><br/>
  <dt><strong><%= model_class.human_attribute_name(:twitter) %>:</strong></dt>
  <dd><%= @contributor.twitter %></dd><br/>
  <dt><strong><%= model_class.human_attribute_name(:stocktwits) %>:</strong></dt>
  <dd><%= @contributor.stocktwits %></dd><br/>
  <dt><strong><%= model_class.human_attribute_name(:facebook) %>:</strong></dt>
  <dd><%= @contributor.facebook %></dd><br/>
  <dt><strong><%= model_class.human_attribute_name(:site) %>:</strong></dt>
  <dd><%= @contributor.site %></dd><br/><br/>
  <dt><strong><%= model_class.human_attribute_name(:full_bio) %>:</strong></dt>
  <dd><%= simple_format @contributor.full_bio %></dd><br/>
</dl>
<br/><br/>

</div>

<div class="clear-fix"></div>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              contributors_path, :class => 'btn'  %>
<% if current_user_is_admin %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_contributor_path(@contributor), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              contributor_path(@contributor),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
<% end %>
</div>


