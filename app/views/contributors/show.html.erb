<%- model_class = Contributor -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @contributor.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:email) %>:</strong></dt>
  <dd><%= @contributor.email %></dd>
  <dt><strong><%= model_class.human_attribute_name(:twitter) %>:</strong></dt>
  <dd><%= @contributor.twitter %></dd>
  <dt><strong><%= model_class.human_attribute_name(:stocktwits) %>:</strong></dt>
  <dd><%= @contributor.stocktwits %></dd>
  <dt><strong><%= model_class.human_attribute_name(:facebook) %>:</strong></dt>
  <dd><%= @contributor.facebook %></dd>
  <dt><strong><%= model_class.human_attribute_name(:site) %>:</strong></dt>
  <dd><%= @contributor.site %></dd><br/>
  <dt><strong><%= model_class.human_attribute_name(:short_bio) %>:</strong></dt>
  <dd><%= simple_format @contributor.short_bio %></dd><br/>
  <dt><strong><%= model_class.human_attribute_name(:full_bio) %>:</strong></dt>
  <dd><%= simple_format @contributor.full_bio %></dd><br/>
  <dt><strong><%= model_class.human_attribute_name(:featured) %>:</strong></dt>
  <dd><%= @contributor.featured %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              contributors_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_contributor_path(@contributor), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              contributor_path(@contributor),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
